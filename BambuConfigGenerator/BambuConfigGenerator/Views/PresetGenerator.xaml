<views:MvxWpfView
    x:Class="BambuConfigGenerator.Views.PresetGenerator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BambuConfigGenerator.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:viewModels="clr-namespace:BambuConfigGenerator.Core.ViewModels;assembly=BambuConfigGenerator.Core"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    d:DataContext="{d:DesignInstance viewModels:PresetGeneratorViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="viewModels:PresetGeneratorViewModel"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Easy filament generator" />


        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label Margin="20,0" Content="Select Brand:" />
                <ListView
                    Width="200"
                    Margin="20,0"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding BrandList}"
                    SelectedIndex="{Binding BrandListSelectedIndex}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label
                                    Margin="5,0"
                                    Content="{Binding .}"
                                    FontSize="14" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Label Margin="20,0" Content="Select filament:" />
                <ListView
                    Width="200"
                    Margin="20,0"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding FilamentList}"
                    SelectedIndex="{Binding FilamentListSelectedIndex}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Margin="5,0"
                                        Content="{Binding Name}"
                                        FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical">
                <Label Margin="20,0" Content="Presets:" />
                <ListView
                    Width="200"
                    Margin="20,0"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding PresetsList}"
                    SelectedIndex="{Binding SerialSelectedIndex}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Margin="5,0"
                                        Content="{Binding Serial}"
                                        FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Vertical">
                <Label Margin="20,0" Content="Params:" />
                <ListView
                    Margin="20,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding PresetParamsList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label Margin="0" Content="{Binding Key}" />
                                <Label
                                    Margin="0"
                                    Content="{Binding Value}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Label Margin="20,0" Content="Select printers:" />
                <ListView
                    Width="200"
                    Margin="20,0"
                    HorizontalAlignment="Left"
                    ItemsSource="{Binding Printers}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Margin="5"
                                    Content="{Binding Name}"
                                    IsChecked="{Binding IsSelected}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Label Margin="20,0" Content="Select nozzles:" />
                <ListView
                    Width="200"
                    Margin="20,0"
                    ItemsSource="{Binding Nozzles}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Margin="5"
                                    Content="{Binding Name}"
                                    IsChecked="{Binding IsSelected}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </StackPanel>

            <!--  BUTTONS  -->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="180"
                    Height="62"
                    Margin="10,10,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding ReadAvailablePresetsCommand}"
                    Content="Load presets" />
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="180"
                    Height="62"
                    Margin="10,10,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding GeneratePresetCommand}"
                    Content="Generate" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="180"
                    Height="62"
                    Margin="10,10,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding GenerateAllPresetsCommand}"
                    Content="Generate all!" />
            </Grid>

        </Grid>

        <Grid
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  Preset  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Preset Path:" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Text="{Binding FolderWithPresetsPath}"
                TextWrapping="Wrap" />
            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                Orientation="Horizontal">
                <Button Command="{Binding SelectFolderWithPresets}" Content="Select file" />
                <Button
                    Width="40"
                    Height="40"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Command="{Binding OpenFolderWithPresetsCommand}">
                    <svgc:SvgViewbox Source="/Resources/folder_24dp.svg" />
                </Button>
            </StackPanel>

            <!--  Template  -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Template Path:" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Text="{Binding FolderWithTemplatesPath}"
                TextWrapping="Wrap" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="2"
                Orientation="Horizontal">
                <Button Command="{Binding SelectFolderWithTemplates}" Content="Select folder" />
                <Button
                    Width="40"
                    Height="40"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Command="{Binding OpenFolderWithTemplatesCommand}">
                    <svgc:SvgViewbox Source="/Resources/folder_24dp.svg" />
                </Button>
            </StackPanel>

            <!--  OUTPUT  -->
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Output Folder:" />
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Text="{Binding OutputFolder}"
                TextWrapping="Wrap">
            </TextBox>
            <StackPanel
                Grid.Row="2"
                Grid.Column="2"
                Orientation="Horizontal">
                <Button Command="{Binding SelectFolderCommand}" Content="Select Folder" />
                <Button
                    Width="40"
                    Height="40"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    Command="{Binding OpenFolderOutputCommand}">
                    <svgc:SvgViewbox Source="/Resources/folder_24dp.svg" />
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</views:MvxWpfView>
